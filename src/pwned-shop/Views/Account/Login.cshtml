@{
    ViewData["Title"] = "Log In";
}

<form asp-controller="Account" asp-action="Login" method="POST">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="UserId">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
    </div>
    <div class="form-group">
        <label for="exampleSalt1">Salt</label>
        <input type="text" class="form-control" id="exampleSalt1" placeholder="Salt" name="Salt">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>